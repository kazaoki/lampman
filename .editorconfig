root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
tab_width = 4

[*.yml]
indent_style = space
tab_width = 2

[*.sh]
indent_style = space
tab_width = 2

[gulpfile.js]
indent_style = tab
tab_width = 4

[*.md]
trim_trailing_whitespace = false
